<h1>liste items</h1>




<div class="container mt-5">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-6 mb-4">
        <div class="card">
          <img src="<%= item.image_url %>" class="card-img-top img-fluid">
          <div class="card-body">
            <h2 class="card-title text-center"><%= item.title %></h2>
            <p><strong>Prix :</strong> <%= item.price %></p>
            <%= link_to "Voir en détails", item_path(item) , class: "btn btn-dark btn-lg" %>
            <%# <%= link_to "Ajouté au panier", add_item_path(item) , class: "btn btn-dark btn-lg" %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>